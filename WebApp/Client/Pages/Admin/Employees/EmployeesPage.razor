@page "/admin/employees"
@* @attribute [Authorize(Roles = "Admin")] *@
@using WebApp.Shared.Model
@inject IJSRuntime JS
@inject HttpClient Http

<h3 class="mb-3">Employees</h3>

@if (employees is null)
{
    <div class="alert alert-info">Loading employees...</div>
}
else if (!employees.Any())
{
    <div class="alert alert-warning">No employees found.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Department</th>
                    <th class="text-center">Active</th>
                    <th class="text-center">Role</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var e in employees.OrderBy(e => e.Name))
                {
                    <tr>
                        <td>
                            <div class="fw-semibold">@e.Name</div>
                            @if (!string.IsNullOrWhiteSpace(e.Phone))
                            {
                                <div class="text-muted small">@e.Phone</div>
                            }
                        </td>
                        <td>
                            <a href="mailto:@e.Email">@e.Email</a>
                        </td>
                        <td>@e.Department?.Name</td>
                        <td class="text-center">
                            @if (e.IsActive)
                            {
                                <span class="badge bg-success rounded-pill">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary rounded-pill">Inactive</span>
                            }
                        </td>
                        <td class="text-center">
                            @if (string.Equals(e.Role, "Admin", StringComparison.OrdinalIgnoreCase))
                            {
                                <span class="badge bg-primary rounded-pill">Admin</span>
                            }
                            else
                            {
                                <span class="badge bg-info text-dark rounded-pill">Employee</span>
                            }
                        </td>
                        <td class="text-end">
                            <div class="btn-group btn-group-sm" role="group">
                                <button class="btn btn-outline-primary" @onclick="() => Edit(e)">Edit</button>
                                <button class="btn btn-outline-danger" @onclick="() => Delete(e.Id)">Delete</button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

<h4>@(editEmployee.Id == 0 ? "Add Employee" : "Edit Employee")</h4>

<EditForm Model="editEmployee" OnValidSubmit="Save">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-2">
        <label>Name</label>
        <InputText class="form-control" @bind-Value="editEmployee.Name" />
    </div>
    <div class="mb-2">
        <label>Email</label>
        <InputText class="form-control" @bind-Value="editEmployee.Email" />
        <ValidationMessage For="@(() => editEmployee.Email)" />
    </div>
    <div class="mb-2">
        <label>Phone</label>
        <InputText class="form-control" @bind-Value="editEmployee.Phone" />
    </div>
    <div class="mb-2">
        <label>Department</label>
        <InputSelect class="form-control" @bind-Value="editEmployee.DepartmentId">
            <option value="0">-- Select --</option>
            @foreach (var d in departments)
            {
                <option value="@d.Id">@d.Name</option>
            }
        </InputSelect>
    </div>
    <div class="mb-2 form-check">
        <InputCheckbox class="form-check-input" @bind-Value="editEmployee.IsActive" />
        <label class="form-check-label ms-1">Active</label>
    </div>
    <div class="mb-2">
        <label>Role</label>
        <InputSelect class="form-control" @bind-Value="editEmployee.Role">
            <option value="Employee">Employee</option>
            <option value="Admin">Admin</option>
        </InputSelect>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-success">
            @(editEmployee.Id == 0 ? "Save" : "Update")
        </button>
        <button type="button" class="btn btn-secondary ms-2" @onclick="Reset">
            Cancel
        </button>

        @* New: reset password button shown only when editing *@
        @if (editEmployee.Id != 0)
        {
            <button type="button"
                    class="btn btn-warning ms-2"
                    @onclick="ResetPassword">
                Reset password (first-time login)
            </button>
        }
    </div>
</EditForm>

@code {
    private List<EmployeeDto>? employees;
    private List<DepartmentDto> departments = new();
    private EmployeeDto editEmployee = new();

    protected override async Task OnInitializedAsync()
    {
        departments = await Http.GetFromJsonAsync<List<DepartmentDto>>("api/departments") ?? new();
        employees = await Http.GetFromJsonAsync<List<EmployeeDto>>("api/employees") ?? new();
    }

    private void Edit(EmployeeDto e)
    {
        // Clone so edits don't immediately change list until Save
        editEmployee = new EmployeeDto
        {
            Id = e.Id,
            Name = e.Name,
            Email = e.Email,
            Phone = e.Phone,
            HireDate = e.HireDate,
            IsActive = e.IsActive,
            DepartmentId = e.DepartmentId,
            Department = e.Department,
            Role = e.Role
        };
    }

    private async Task Save()
    {
        if (editEmployee.DepartmentId == 0)
            return; // basic guard

        // Duplicate check by Email (ignore case, ignore same record)
        var duplicate = employees!
            .Any(e => e.Email.Equals(editEmployee.Email, StringComparison.OrdinalIgnoreCase)
                   && e.Id != editEmployee.Id);

        if (duplicate)
        {
            await JS.InvokeVoidAsync("alert", "An employee with this email already exists.");
            return;
        }

        // If editing, confirm before update
        if (editEmployee.Id != 0)
        {
            var confirmUpdate = await JS.InvokeAsync<bool>(
                "confirm",
                $"Update employee {editEmployee.Name}?");
            if (!confirmUpdate)
                return;
        }

        if (editEmployee.Id == 0)
        {
            var response = await Http.PostAsJsonAsync("api/employees", editEmployee);
            if (!response.IsSuccessStatusCode)
            {
                await JS.InvokeVoidAsync("alert", "Failed to save employee.");
                return;
            }

            var created = await response.Content.ReadFromJsonAsync<EmployeeDto>();
            if (created != null)
            {
                created.Department = departments.FirstOrDefault(d => d.Id == created.DepartmentId);
                employees!.Add(created);
            }
        }
        else
        {
            var response = await Http.PutAsJsonAsync($"api/employees/{editEmployee.Id}", editEmployee);
            if (!response.IsSuccessStatusCode)
            {
                await JS.InvokeVoidAsync("alert", "Failed to update employee.");
                return;
            }

            var existing = employees!.First(e => e.Id == editEmployee.Id);
            existing.Name = editEmployee.Name;
            existing.Email = editEmployee.Email;
            existing.Phone = editEmployee.Phone;
            existing.HireDate = editEmployee.HireDate;
            existing.IsActive = editEmployee.IsActive;
            existing.DepartmentId = editEmployee.DepartmentId;
            existing.Department = departments.FirstOrDefault(d => d.Id == editEmployee.DepartmentId);
            existing.Role = editEmployee.Role;
        }

        // Optional: sync role via API endpoint
        if (editEmployee.Id != 0)
        {
            await Http.PostAsJsonAsync(
                $"api/employees/{editEmployee.Id}/role",
                new { roleName = editEmployee.Role });
        }

        Reset();
    }

    private async Task Delete(int id)
    {
        var employee = employees!.FirstOrDefault(e => e.Id == id);
        if (employee is null)
            return;

        var confirmDelete = await JS.InvokeAsync<bool>(
            "confirm",
            $"Are you sure you want to delete {employee.Name}?");
        if (!confirmDelete)
            return;

        var response = await Http.DeleteAsync($"api/employees/{id}");
        if (response.IsSuccessStatusCode)
        {
            employees.Remove(employee);
        }
        else
        {
            await JS.InvokeVoidAsync("alert", "Failed to delete employee.");
        }
    }

    private async Task ResetPassword()
    {
        if (editEmployee.Id == 0)
            return;

        var confirm = await JS.InvokeAsync<bool>(
            "confirm",
            $"Reset password for {editEmployee.Name}? They will need to complete first-time login again.");

        if (!confirm)
            return;

        var response = await Http.PostAsync($"api/employees/{editEmployee.Id}/reset-password", null);

        if (!response.IsSuccessStatusCode)
        {
            await JS.InvokeVoidAsync("alert", "Failed to reset password.");
            return;
        }

        await JS.InvokeVoidAsync("alert", "Password reset. Employee can do first-time login again.");
    }

    private void Reset()
    {
        editEmployee = new EmployeeDto
        {
            IsActive = true,
            HireDate = DateTime.Now,
            Role = "Employee"
        };
    }
}
