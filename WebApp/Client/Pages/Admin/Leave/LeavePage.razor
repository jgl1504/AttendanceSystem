@page "/admin/leave"
@using WebApp.Shared.Model
@inject HttpClient Http
@inject IJSRuntime JS

<h3>Leave Administration</h3>

@if (pending is null)
{
    <p>Loading pending requests...</p>
}
else if (!pending.Any())
{
    <p class="text-muted">No pending leave requests.</p>
}
else
{
    <table class="table table-sm">
        <thead>
            <tr>
                <th>Employee</th>
                <th>Start</th>
                <th>End</th>
                <th>Days</th>
                <th>Portion</th>
                <th>Type</th>
                <th>Requested</th>
                <th>Reason / Comment</th>
                <th>Balance</th>
                <th>Proof</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in pending)
            {
                var balanceKey = GetBalanceKey(r.EmployeeId, r.LeaveTypeId);

                <tr>
                    <td>@r.EmployeeName</td>
                    <td>@r.StartDate.ToString("yyyy-MM-dd")</td>
                    <td>@r.EndDate.ToString("yyyy-MM-dd")</td>
                    <td>@r.DaysTaken</td>
                    <td>
                        <select class="form-select form-select-sm"
                                value="@((int)r.Portion)"
                                @onchange="e => ChangePortion(r, e)">
                            <option value="1">Full day</option>
                            <option value="2">Half day</option>
                        </select>
                    </td>
                    <td>
                        <select class="form-select form-select-sm"
                                @onchange="e => ChangeType(r, e)">
                            @foreach (var lt in leaveTypes)
                            {
                                <option value="@lt.Id" selected="@(lt.Id == r.LeaveTypeId)">
                                    @lt.Name
                                </option>
                            }
                        </select>
                    </td>
                    <td>@r.RequestedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                    <td>
                        <input class="form-control form-control-sm"
                               @bind="r.Reason" />
                    </td>
                    <td>
                        @if (balances.TryGetValue(balanceKey, out var b))
                        {
                            <span class="small">
                                @b.LeaveTypeName:
                                @b.Remaining @(" left, requested ") @r.DaysTaken
                                @(" (of ") @b.TotalEntitlement @(" total)")
                            </span>
                        }
                        else
                        {
                            <button class="btn btn-sm btn-outline-info"
                                    @onclick="() => LoadBalance(r)">
                                Load
                            </button>
                        }
                    </td>
                    <td>
                        @if (r.RequiresDocument && !string.IsNullOrWhiteSpace(r.AttachmentFileName))
                        {
                            <button class="btn btn-sm btn-outline-secondary"
                                    @onclick="() => ViewAttachment(r.Id)">
                                View
                            </button>
                        }
                        else if (r.RequiresDocument)
                        {
                            <span class="text-warning small">Required</span>
                        }
                        else
                        {
                            <span class="text-muted small">None</span>
                        }
                    </td>
                    <td>
                        <button class="btn btn-sm btn-success me-1" @onclick="() => Approve(r)">Approve</button>
                        <button class="btn btn-sm btn-outline-danger" @onclick="() => Reject(r)">Reject</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<LeaveRecordDto>? pending;
    private List<LeaveType> leaveTypes = new();

    // Cache per employee+leaveType
    private readonly Dictionary<string, LeaveBalanceSummaryDto> balances = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadPending();
        leaveTypes = await Http.GetFromJsonAsync<List<LeaveType>>("api/leavetypes/active") ?? new();
    }

    private async Task LoadPending()
    {
        pending = await Http.GetFromJsonAsync<List<LeaveRecordDto>>("api/leave/pending");
        balances.Clear();
    }

    private string GetBalanceKey(int employeeId, Guid leaveTypeId)
        => $"{employeeId}:{leaveTypeId}";

    private async Task LoadBalance(LeaveRecordDto record)
    {
        try
        {
            var url = $"api/leave/balance-summary/{record.EmployeeId}/{record.LeaveTypeId}";
            var summary = await Http.GetFromJsonAsync<LeaveBalanceSummaryDto>(url);

            if (summary is not null)
            {
                balances[GetBalanceKey(record.EmployeeId, record.LeaveTypeId)] = summary;
                StateHasChanged();
            }
        }
        catch
        {
            await JS.InvokeVoidAsync("alert", "Failed to load leave balance for this request.");
        }
    }

    private async Task ChangePortion(LeaveRecordDto record, ChangeEventArgs e)
    {
        if (!int.TryParse(e.Value?.ToString(), out var portionInt))
            return;

        var newPortion = (LeavePortion)portionInt;

        var ok = await JS.InvokeAsync<bool>("confirm", $"Change portion to {newPortion}?");
        if (!ok) return;

        var response = await Http.PostAsJsonAsync($"api/leave/change-portion/{record.Id}", newPortion);
        if (!response.IsSuccessStatusCode)
        {
            await JS.InvokeVoidAsync("alert", "Failed to change portion.");
            return;
        }

        // Reload this employee's records and pick the updated one so DaysTaken is correct
        var allForEmployee =
            await Http.GetFromJsonAsync<List<LeaveRecordDto>>($"api/leave/employee/{record.EmployeeId}")
            ?? new List<LeaveRecordDto>();

        var updated = allForEmployee.FirstOrDefault(x => x.Id == record.Id);
        if (updated is not null)
        {
            record.Portion = updated.Portion;
            record.DaysTaken = updated.DaysTaken;
        }
        else
        {
            record.Portion = newPortion; // fallback
        }

        StateHasChanged();
    }


    private async Task ChangeType(LeaveRecordDto record, ChangeEventArgs e)
    {
        if (!Guid.TryParse(e.Value?.ToString(), out var newTypeId))
            return;

        var newTypeName = leaveTypes.FirstOrDefault(x => x.Id == newTypeId)?.Name ?? "this type";
        var ok = await JS.InvokeAsync<bool>("confirm", $"Change leave type to {newTypeName}?");
        if (!ok) return;

        var response = await Http.PostAsJsonAsync($"api/leave/change-type/{record.Id}", newTypeId);
        if (!response.IsSuccessStatusCode)
        {
            await JS.InvokeVoidAsync("alert", "Failed to change leave type.");
            return;
        }

        // update in-memory record
        record.LeaveTypeId = newTypeId;
        record.LeaveTypeName = newTypeName;

        // clear cached balance for this key
        balances.Remove(GetBalanceKey(record.EmployeeId, record.LeaveTypeId));

        StateHasChanged();
    }

    private async Task Approve(LeaveRecordDto r)
    {
        var ok = await JS.InvokeAsync<bool>("confirm", "Approve this leave request?");
        if (!ok) return;

        var response = await Http.PostAsJsonAsync($"api/leave/approve/{r.Id}", r.Reason ?? string.Empty);
        if (!response.IsSuccessStatusCode)
        {
            await JS.InvokeVoidAsync("alert", "Failed to approve.");
            return;
        }

        await LoadPending();
    }

    private async Task Reject(LeaveRecordDto r)
    {
        var ok = await JS.InvokeAsync<bool>("confirm", "Reject this leave request?");
        if (!ok) return;

        var response = await Http.PostAsJsonAsync($"api/leave/reject/{r.Id}", r.Reason ?? string.Empty);
        if (!response.IsSuccessStatusCode)
        {
            await JS.InvokeVoidAsync("alert", "Failed to reject.");
            return;
        }

        await LoadPending();
    }

    private async Task ViewAttachment(int id)
    {
        try
        {
            var url = await Http.GetStringAsync($"api/leave/attachment-url/{id}");
            if (string.IsNullOrWhiteSpace(url))
            {
                await JS.InvokeVoidAsync("alert", "No attachment found for this request.");
                return;
            }

            await JS.InvokeVoidAsync("open", url, "_blank");
        }
        catch
        {
            await JS.InvokeVoidAsync("alert", "Failed to load attachment.");
        }
    }
}
