@page "/admin/leave/setup"
@using WebApp.Shared.Model
@inject HttpClient Http
@inject IJSRuntime JS

<h3>Leave Setup</h3>

@if (rows is null)
{
    <p>Loading...</p>
}
else if (!rows.Any())
{
    <p class="text-muted">No employees found.</p>
}
else
{
    <table class="table table-sm align-middle">
        <thead>
            <tr>
                <th>Employee</th>
                <th>Days / Week</th>
                <th>Accrual / Month</th>
                <th>Current Balance</th>
                <th>Set Balance</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in rows)
            {
                <tr>
                    <td>@r.EmployeeName</td>
                    <td>
                        <select class="form-select form-select-sm" @bind="r.DaysPerWeek">
                            <option value="5">5</option>
                            <option value="6">6</option>
                        </select>
                    </td>
                    <td>
                        <input type="number"
                               step="0.01"
                               class="form-control form-control-sm"
                               @bind="r.AccrualRatePerMonth" />
                    </td>
                    <td>@r.CurrentBalance</td>
                    <td>
                        <input type="number"
                               step="0.01"
                               class="form-control form-control-sm"
                               @bind="r.NewBalance" />
                    </td>
                    <td>
                        <button class="btn btn-sm btn-primary"
                                @onclick="() => SaveRow(r)">
                            Save
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<p class="mt-3 @(isError ? "text-danger" : "text-muted")">@statusMessage</p>

@code {
    private List<LeaveSetupRow>? rows;
    private bool isError;
    private string statusMessage = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadRows();
    }

    private async Task LoadRows()
    {
        isError = false;
        statusMessage = string.Empty;

        try
        {
            rows = await Http.GetFromJsonAsync<List<LeaveSetupRow>>("api/leave/setup") ?? new();
        }
        catch
        {
            rows = new();
            isError = true;
            statusMessage = "Failed to load leave setup.";
        }
    }

    private async Task SaveRow(LeaveSetupRow r)
    {
        isError = false;
        statusMessage = string.Empty;

        var confirm = await JS.InvokeAsync<bool>("confirm",
            $"Save leave settings for {r.EmployeeName}?");
        if (!confirm) return;

        var response = await Http.PostAsJsonAsync("api/leave/setup", r);
        if (!response.IsSuccessStatusCode)
        {
            isError = true;
            statusMessage = "Failed to save leave settings.";
            return;
        }

        statusMessage = $"Saved leave settings for {r.EmployeeName}.";
        await LoadRows();
    }

    public class LeaveSetupRow
    {
        public int EmployeeId { get; set; }
        public string EmployeeName { get; set; } = string.Empty;

        public int DaysPerWeek { get; set; } = 5;
        public decimal AccrualRatePerMonth { get; set; } = 1.25m;

        public decimal CurrentBalance { get; set; }
        public decimal NewBalance { get; set; }
    }
}
